<resources>

    <!-- Base application theme. already haven-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>




    <style name="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@xml/button_bg</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:textSize">@dimen/txtButton</item>
    </style>

    <style name="labelName">
        <item name="android:textColor">@color/lbl_color</item>
        <item name="android:textSize">@dimen/text_size22</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="labelVal">
        <item name="android:textColor">@color/lbl_color</item>
        <item name="android:textSize">@dimen/text_size22</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
